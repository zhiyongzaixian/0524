/* pages/list-template/listTemplate.wxss */
.tmpContainer {
	display: flex;
	flex-direction: column;
	border-bottom: 1rpx solid #eee;
}
.avatar_date {
	padding: 10rpx;
}
.avatar_date image {
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}

.avatar_date text {
	font-size: 30rpx;
	margin-left: 10rpx;
	vertical-align: middle;
}

.company {
	margin-left: 10rpx;
	font-size: 40rpx;
	font-weight: bold;
}

.tmp_img {
	width: 100%;
	height: 460rpx;
	margin: 10rpx 0;
}

.content {
	font-size: 36rpx;
	text-indent: 36rpx;
	letter-spacing: 3rpx;
}

.star_view_container image {
	width: 32rpx;
	height: 32rpx;
	vertical-align: middle;
	margin-left: 10rpx;
}

.star_view_container text {
	font-size: 24rpx;
	vertical-align: middle;
	margin-left: 10rpx;
	
}
